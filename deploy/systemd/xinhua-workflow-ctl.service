[Unit]
Description=Xinhua Workflow Control Service
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/xinhua/workflow-ctl
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/opt/xinhua/workflow-ctl/.env
ExecStart=/usr/local/bin/uvicorn main:app --host 0.0.0.0 --port 8889 --workers 4
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=xinhua-workflow-ctl

[Install]
WantedBy=multi-user.target

