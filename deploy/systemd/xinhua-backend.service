[Unit]
Description=Xinhua Backend Service
After=network.target mysql.service

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/xinhua/backend
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/opt/xinhua/backend/.env
ExecStart=/usr/local/bin/uvicorn main:app --host 0.0.0.0 --port 8888 --workers 4
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=xinhua-backend

[Install]
WantedBy=multi-user.target

